@model TravelExpenseViewModel
@{
    ViewData["Title"] = "Detail Page";
    var photoPath = "~/images/" + (Model.PhotoPath ?? "no-image.png");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Title</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>Status: @Model.Status</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index"  asp-route-id="@Model.EmployeeId" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>
